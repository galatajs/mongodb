{
  "name": "@istanbul/mongodb",
  "version": "0.0.5",
  "description": "Mongodb package of istanbul framework",
  "homepage": "https://github.com/istanbulnode/mongodb#readme",
  "keywords": [
    "typescript",
    "istanbul",
    "istanbuljs",
    "mongodb",
    "nosql"
  ],
  "author": "Sami Salih İBRAHİMBAŞ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/istanbulnode/mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/istanbulnode/mongodb/issues"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --watchAll --no-cache",
    "clear": "del-cli ./dist/*",
    "build": "npm run clear && tsc"
  },
  "dependencies": {
    "@istanbul/app": "^0.0.33"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.0",
    "jest": "^28.1.3",
    "mongodb": "^4.8.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1",
      "~/(.*)": "<rootDir>/$1"
    }
  }
}
